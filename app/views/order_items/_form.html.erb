<section class="OrderItemForm">
  <%= form_with(model: order_item, local: true) do |form| %>
    <% if order_item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(order_item.errors.count, "error") %> prohibited this order_item from being saved:</h2>

        <ul>
          <% order_item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="OrderItemForm-field">
      <p class="OrderItemForm-fieldTitle"><%= form.label :order_id %></p>
      <div class="OrderItemForm-orderIDInput"><%= form.text_field :order_id %>
    </div>

    <div class="OrderItemForm-field">
      <p class="OrderItemForm-fieldTitle"><%= form.label :menu_item_id %></p>
      <div class="OrderItemForm-menuItemIdInput"><%= form.text_field :menu_item_id %></div>
    </div>

    <div class="OrderItemForm-field">
      <p class="OrderItemForm-fieldTitle"><%= form.label :menu_item_name %></p>
      <div class="OrderItemForm-menuItemNameInput"><%= form.text_field :menu_item_name %></div>
    </div>

    <div class="OrderItemForm-field">
      <p class="OrderItemForm-fieldTitle"><%= form.label :menu_item_price %></p>
      <div class="OrderItemForm-menuItemPriceInput"><%= form.text_field :menu_item_price %></div>
    </div>

    <div class="OrderItemForm-field">
      <p class="OrderItemForm-fieldTitle"><%= form.label :quantity %></p>
      <div class="OrderItemForm-quantityInput"><%= form.number_field :quantity %></div>
    </div>

    <div class="OrderItemForm-field">
      <p class="OrderItemForm-fieldTitle"><%= form.label :total %></p>
      <div class="OrderItemForm-totalInput"><%= form.text_field :total %></div>
    </div>

    <%= form.submit class: "OrderItemForm-submitButton" %>
  <% end %>
</section>
